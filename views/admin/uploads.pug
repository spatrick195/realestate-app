extends admin_layout.pug
block content-admin
    .container-fluid
        .row
            .col-lg-2
                ul.list-group
                    li.list-group-item
                        i.fas.fa-road
                        a(href='/admin/user/dashboard') User Dashboard
                    li.list-group-item
                        i.fas.fa-upload
                        a(href='/admin/user/file-uploads') File Uploads
            .col-lg-10
                h1.text-danger File Upload Area
                    form(action="/admin/user/uploads" method="POST" enctype="multipart/form-data")
                        input(type="file" name="myImage" id="image_uploads" accept=".jpg, .jpeg, .png, .gif")
                        br
                        p=msg
                        button.btn.btn-success.mt-4 Upload File
